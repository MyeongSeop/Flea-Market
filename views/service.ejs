    <script>
        function msg(){
            var msg_type = document.getElementById('msg-type');
            var title = document.getElementById('msg-title');
            var message = document.getElementById('message');
            if(!msg_type.value || msg_type.value == '' || msg_type.value =='Message Type'){
                alert('Please choose type!');
                return;
            }
            else{
                if(!title.value || !message.value) alert('Please enter both title and message!');
                else{
                    msg_type = msg_type.value;
                    title = title.value;
                    message = message.value;
                    var gogo = '/message?type=' + msg_type + '&title=' + title + '&message=' + message;
                    window.location.href = gogo;
                }
            }
            
        }

        var mapContainer = document.getElementById('map'), 
            mapOption = { 
                center: new kakao.maps.LatLng(37.296016689560226, 126.9754851411559), 
                level: 4 
            };

        var map = new kakao.maps.Map(mapContainer, mapOption);
        var markerPosition  = new kakao.maps.LatLng(37.296016689560226, 126.9754851411559); 

        var marker = new kakao.maps.Marker({
            position: markerPosition
        });

        marker.setMap(map);
        var iwContent = '<div style="padding:5px; color:black; text-align:center">&nbsp;Flea Market office!</div>'; 

        var infowindow = new kakao.maps.InfoWindow({
            content : iwContent
        });

        kakao.maps.event.addListener(marker, 'mouseover', function() {
            infowindow.open(map, marker);
        });

        kakao.maps.event.addListener(marker, 'mouseout', function() {
            infowindow.close();
        });

    </script>
